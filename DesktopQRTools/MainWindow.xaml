<Window x:Class="DesktopQRTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopQRTools"
        mc:Ignorable="d"
        Title="Desktop QR Tools" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="CreateQRCodeButton" Content="Create QR Code" Width="200" Height="50" Margin="0,0,0,20" Click="CreateQRCodeButton_Click"/>
            <Button x:Name="ScanQRCodeButton" Content="Scan QR Code" Width="200" Height="50" Margin="0,0,0,20" Click="ScanQRCodeButton_Click"/>
            <Button x:Name="OptionsButton" Content="Options" Width="200" Height="50" Click="OptionsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
