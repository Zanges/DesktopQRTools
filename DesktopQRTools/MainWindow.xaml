<Window x:Class="DesktopQRTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopQRTools"
        mc:Ignorable="d"
        Title="Desktop QR Tools" Height="200" Width="120">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Button x:Name="CreateQRCodeButton" Content="Create QR Code" Grid.Row="0" Margin="5" Click="CreateQRCodeButton_Click"/>
        <Button x:Name="ScanQRCodeButton" Content="Scan QR Code" Grid.Row="1" Margin="5" Click="ScanQRCodeButton_Click"/>
        <Button x:Name="OptionsButton" Content="Options" Grid.Row="2" Margin="5" Click="OptionsButton_Click"/>
    </Grid>
</Window>
