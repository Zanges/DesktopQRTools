<Window x:Class="DesktopQRTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopQRTools"
        mc:Ignorable="d"
        Title="Desktop QR Tools" Height="200" Width="200">
    <Grid>
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Button x:Name="CreateQRCodeButton" Content="Create QR Code" Height="70" Margin="0" Click="CreateQRCodeButton_Click"/>
            <Button x:Name="ScanQRCodeButton" Content="Scan QR Code" Height="70" Margin="0" Click="ScanQRCodeButton_Click"/>
            <Button x:Name="OptionsButton" Content="Options" Height="35" Margin="0" Click="OptionsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
