<Window x:Class="DesktopQRTools.QRCodeScannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopQRTools"
        mc:Ignorable="d"
        Title="QR Code Scanner" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">
    <Canvas>
        <Rectangle x:Name="SelectionRectangle" 
                   Stroke="Red" 
                   StrokeThickness="2" 
                   Fill="#3000FF00"
                   Visibility="Collapsed"/>
        <TextBlock x:Name="InstructionsTextBlock"
                   Text="Click and drag to select the area containing the QR code"
                   FontSize="24"
                   Foreground="White"
                   Canvas.Left="50"
                   Canvas.Top="50"/>
    </Canvas>
</Window>
